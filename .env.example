
# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment mode (development, production, test)
NODE_ENV=development

# Environment flag for auth middleware (development bypasses auth)
ENV=development

# Server port (Heroku will override this)
PORT=5000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated for multiple domains)
# Examples: 
# - Single domain: https://your-frontend-domain.com
# - Multiple domains: https://app.example.com,https://www.example.com,http://localhost:3000
# - Development: http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000


# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limiting window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit message
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again after 15 minutes

# =============================================================================
# REQUEST BODY LIMITS
# =============================================================================

# JSON payload limit
JSON_LIMIT=10mb

# URL encoded payload limit
URL_ENCODED_LIMIT=10mb

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (if you plan to implement custom JWT auth)
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection (if you add other databases)
# DATABASE_URL=your-database-connection-string

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase project ID from your Firebase console
# FIREBASE_PROJECT_ID=your-project-id

# Firebase service account email
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Firebase private key (remember to escape newlines with \\n)
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
